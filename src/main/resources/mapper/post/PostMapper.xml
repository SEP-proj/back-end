    <select id="findAll" resultType="com.septeam.metatraining.post.command.domain.aggregate.entity.Post">
        SELECT *
        FROM
            POST_TB
        WHERE PUBLISHED = 1
    </select>

    <select id="findByCategory" resultType="com.septeam.metatraining.post.command.domain.aggregate.entity.Post">
        SELECT *
        FROM
            POST_TB
        WHERE CATEGORY = #{category}
        AND PUBLISHED = 1
    </select>

    <select id="findById" resultType="com.septeam.metatraining.post.command.domain.aggregate.entity.Post">
        SELECT *
        FROM
            POST_TB
        WHERE ID = #{postId}
--           AND PUBLISHED = 1
    </select>

    <select id="findByMyPost" resultType="com.septeam.metatraining.post.command.domain.aggregate.entity.Post">
        SELECT *
        FROM
            POST_TB
        WHERE MEMBER_ID = #{memberId}
--           AND PUBLISHED = 1
    </select>
